<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EncryptionActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEncrypt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/biometric_back_100"
        android:layout_alignParentBottom="true"
        android:onClick="onClickEncryptMessage"
        android:text="@string/encrypt_message" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonEncrypt">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/hint_message_input"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>
